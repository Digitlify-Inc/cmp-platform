{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gsv.dev/schemas/capability-registry.schema.json",
  "title": "Capability Registry Schema",
  "type": "object",
  "required": [
    "version",
    "registry",
    "capabilities"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "registry": {
      "type": "object"
    },
    "capabilities": {
      "type": "array"
    }
  },
  "additionalProperties": false
}